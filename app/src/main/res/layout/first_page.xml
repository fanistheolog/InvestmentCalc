<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1b1b">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20242a">

        <androidx.cardview.widget.CardView
            android:layout_width="341dp"
            android:layout_height="320dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="282dp"
            android:layout_marginBottom="25dp"
            android:rotation="7"
            android:visibility="gone"

            app:cardBackgroundColor="#2b3038"
            app:cardCornerRadius="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="12dp"
            card_view:cardUseCompatPadding="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="-142sp"
            android:visibility="gone"
            app:srcCompat="@drawable/blue" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="175dp"
            android:fontFamily="@font/convergence"
            android:text="See All The Calculators"
            android:textColor="#43474d"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/green" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="575sp"
            android:fontFamily="@font/convergence"
            android:text="Scroll to see more"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="1200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-500dp"
            android:layout_marginTop="140sp"
            android:visibility="gone"
            app:srcCompat="@drawable/back" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center_horizontal"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-5757791727452293/9794909369"></com.google.android.gms.ads.AdView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35sp"
                android:fontFamily="@font/convergence"
                android:gravity="center"
                android:text="Investment \nCalculators"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/akla"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:text="Investment Calculator"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5sp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/first"
                    android:layout_width="361dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="22dp"
                    android:visibility="visible"

                    app:cardBackgroundColor="#272c35"
                    app:cardCornerRadius="12dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="12dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="395dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/convergence"
                            android:text="Investment Calculator"
                            android:textColor="#2076db"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="395dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/convergence"
                            android:text="Used calculate the return rate needed \nto reach an investment goal"
                            android:textColor="#A2A8AF"
                            android:textSize="16dp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/second"
                    android:layout_width="361dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="22dp"
                    android:visibility="visible"

                    app:cardBackgroundColor="#272c35"
                    app:cardCornerRadius="12dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="12dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="395dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/convergence"
                            android:text="Currency Converter"
                            android:textColor="#2076db"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="395dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/convergence"
                            android:text="Used calculate the price of a coin in \na different currency"
                            android:textColor="#A2A8AF"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/returnratebutton"
                    android:layout_width="361dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="22dp"
                    android:visibility="visible"

                    app:cardBackgroundColor="#272c35"
                    app:cardCornerRadius="12dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="12dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="395dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/convergence"
                            android:text="Investment Length"
                            android:textColor="#2076db"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="395dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/convergence"
                            android:text="Used to calculate the return rate needed \nto reach an investment goal"
                            android:textColor="#A2A8AF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/startingamountbutton"
                    android:layout_width="361dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="22dp"
                    android:visibility="visible"

                    app:cardBackgroundColor="#272c35"
                    app:cardCornerRadius="12dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="12dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="395dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/convergence"
                            android:text="Starting Amount"
                            android:textColor="#2076db"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="395dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/convergence"
                            android:text="Used to calculate the return rate needed \nto reach an investment goal"
                            android:textColor="#A2A8AF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>